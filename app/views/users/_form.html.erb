
<%= form_for(user) do |f| %>
  <div class="row">
    <div class="col">
      <label class="control-label col-sm-5 col-md-4" for="team_membr_fname"> Name <span style="color:Red"></span></label> 
      <%= f.text_field :name ,:required=>true ,:class=>"form-control" %>
    </div>
    <div class="col">
      <label class="control-label col-sm-5 col-md-4" for="team_membr_fname"> Mobile <span style="color:Red"></span></label> 
      <%= f.text_field :mobile ,:required=>true ,:class=>"form-control" %>
    </div>
  </div>
  
 
  <div class="row col" align="center" >
    <%= f.submit 'Save',:class=>"btn btn-success" %>
    <button type="reset"  class="btn btn-warning">Reset</button> 
    <%= link_to 'Back', users_path,:class=>"btn btn-primary" %> 
  </div>
  </br>  
<% end %>
